<div>
    <label for="backToHome" style="font-size:xx-large; float:left;"> Edit / Delete Employee Details </h1>
    <a class="btn btn-primary mt-2 mb-4 ml-4" name="backToHome" style="float:right" href="/employeeLogin/employeeHome?user={{employee.Email}}&pass={{employee.Password}}">Back To Home</a>  
</div>
<form method="post" id="editDeleteEmployee">
    <input type="hidden" name="user" value="{{employee.Email}}">
    <input type="hidden" name="pass" value="{{employee.Password}}"> 
</form>

<table class="table table-striped table-dark table-bordered table-hover mt-4" id="displayEmployeeInfo">
    <thead class="thead-dark">
        <tr>
            <th scope="col"> Employee ID </th>
            <th scope="col"> Role </th>
            <th scope="col"> First Name </th>
            <th scope="col"> Last Name </th>
            <th scope="col"> Address </th>
            <th scope="col"> City </th>
            <th scope="col"> State </th>
            <th scope="col"> Zip Code </th>
            <th scope="col"> Telephone </th>
            <th scope="col"> Email </th>
            <th scope="col"> Start Date </th>
            <th scope="col"> Hourly Rate </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    {{#each employeeList}}
    <tr>
        <th scope="row">{{this.SSN}}</th>
        <td>{{this.Role}}</td>
        <td>{{this.FirstName}}</td>
        <td>{{this.LastName}}</td>
        <td>{{this.Street}}</td>
        <td>{{this.City}}</td>
        <td>{{this.State}}</td>
        <td>{{this.Zipcode}}</td>
        <td>{{this.Telephone}}</td>
        <td>{{this.Email}}</td>
        <td>{{this.StartDate}}</td>
        <td>{{this.HourlyRate}}</td>
        <td> 
            <form method="get" id="editDeleteEmployee">
                <input class="btn btn-primary pt-2 pb-2 pl-4 pr-4 mb-4" type="button" value="Edit" form="editDeleteEmployee" formaction=""> 
                <input class="btn btn-primary pt-2 pb-2 pl-3 pr-3" type="button" value="Delete" form="editDeleteEmployee" formaction=""> 
            </form>    
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>