<div>
    <label for="backToHome" style="font-size:xx-large; float:left;"> View Customer Details </h1>
    <a class="btn btn-primary mt-2 mb-4 ml-4" name="backToHome" style="float:right" href="/employeeLogin/employeeHome?user={{employee.Email}}&pass={{employee.Password}}">Back To Home</a>  
</div>
<form method="post" id="editDeleteCustomer">
    <input type="hidden" name="user" value="{{employee.Email}}">
    <input type="hidden" name="pass" value="{{employee.Password}}"> 
</form>

<table class="table table-striped table-dark table-bordered table-hover mt-4" id="displayCustomerInfo">
    <thead class="thead-dark">
        <tr>
            <th scope="col"> Account Number </th>
            <th scope="col"> Customer SSN </th>
            <th scope="col"> First Name </th>
            <th scope="col"> Last Name </th>
            <th scope="col"> Address </th>
            <th scope="col"> City </th>
            <th scope="col"> State </th>
            <th scope="col"> Zip Code </th>
            <th scope="col"> Telephone </th>
            <th scope="col"> Email </th>
            <th scope="col"> Credit Card </th>
            <th scope="col"> Rating </th>
            <th scope="col"> PPP </th>
            <th scope="col"> Last Active </th>
        </tr>
    </thead>
    <tbody>
    {{#each customerList}}
    <tr>
        <th scope="row">{{this.AcctNum}}</th>
        <td>{{this.SSN}}</td>
        <td>{{this.FirstName}}</td>
        <td>{{this.LastName}}</td>
        <td>{{this.Street}}</td>
        <td>{{this.City}}</td>
        <td>{{this.State}}</td>
        <td>{{this.Zipcode}}</td>
        <td>{{this.Telephone}}</td>
        <td>{{this.Email}}</td>
        <td>{{this.CardNumber}}</td>
        <td>{{this.Rating}}</td>
        <td>{{this.PPP}}</td>
        <td>{{this.DateOfLastAct}}</td>
    </tr>
    {{/each}}
    </tbody>
</table>