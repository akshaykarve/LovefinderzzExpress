<h1 class="text-center"> Calculate Revenue Generated By Dates </h1>

<h3> Options: </h3>

<div class="container pt-4">
    <div class="row">
        <div class="col">
            <div class="container p-4 m-4">
                <h4>Search by Calendar Date</h4>
                <form method="get" id="byCalendarDate">
                    <form method="post" id="byCalendarDate">
                        <input type="hidden" name="user" value="{{employee.Email}}">
                        <input type="hidden" name="pass" value="{{employee.Password}}"> 
                    </form>
                    <label class="mt-2" for='SearchDate'>Date</label>
                    <input class="form-control" type="date" name="SearchDate" required>
                    <input class="btn btn-primary mt-2" type="submit" value="Search" form="byCalendarDate">
                </form>
            </div>
        </div>
        <div class="col">
            <div class="container p-4 m-4">
                <h4>Search by Customer</h4>
                <form method="get" id="byCustomerName">
                    <form method="post" id="byCustomerName">
                        <input type="hidden" name="user" value="{{employee.Email}}">
                        <input type="hidden" name="pass" value="{{employee.Password}}"> 
                    </form>
                    <label class="mt-2" for='SearchName'>Customer Name</label>
                    <input class="form-control" type="text" placeholder="Customer Name" name="SearchName" required>
                    <input class="btn btn-primary mt-2" type="submit" value="Search" form="byCustomerName">
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <a class="btn btn-primary m-4" href="/employeeLogin/employeeHome?user={{employee.Email}}&pass={{employee.Password}}">Back To Home</a>  
    </div>
</div>
